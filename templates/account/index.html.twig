{% extends 'base.html.twig' %}

{% block title %}Lib2Move - Account{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .menu_link { background-color: white; color: black; padding: 4px; }
    .menu_link:hover { background-color: black; color: white; }
</style>

<nav style="position:fixed; padding: 0px; padding-left: 10px; z-index: 99999;" class="col-sm-1 ml-auto mt-md-3 border border-primary p-md-1">
        <a class="menu_link" href="{{ path('account') }}">&gt;All Offers</a><br>
        <a class="menu_link" href="{{ path('account', { "search_by": "car" } ) }}">&gt;Car</a><br>
        <a class="menu_link" href="{{ path('account', { "search_by": "motorcycle" } ) }}">&gt;Motorcycle</a><br>
        <a class="menu_link" href="{{ path('account', { "search_by": "scooter" } ) }}">&gt;Scooter</a><br>
        <a class="menu_link" href="{{ path('rents_user') }}">&gt;All Rentals</a>
 </nav>

<div class="container-fluid">

    <div class="row h-100 pt-3">
        <div class="col col-sm-1 ml-auto fixed-left">
            
        </div>
        <div class="col">
            <h1 class="display-6">List vehicle to rent :</h1>

            <div class="row justify-content-center ml-1">
                {% for offer in offers %}
                    <div class="border border-primary rounded p-1 wow bounceInUp" style="background-color: black; width: 300px; border: 8px; text-align:center; margin: 15px; position:relative;">
                        <p style="text-align: center">{{ offer.vehicle.brand }}<br>
                        <img src="../uploads/{{ offer.vehicle.picture }}" alt="offer_image"/>
                        Duration: 5 days<br>
                        Price: {{ offer.offerPrice }}$
                        </p>
                        <a href="{{ path('view_offer', {'id': offer.id }) }}"><button style="">View this offer</button></a>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

    
</div>
{% endblock %}
