{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Firstname</th>
            <th>Lastname</th>
            <th>Birthday</th>
            <th>PhoneNumber</th>
            <th>LicenceNumber</th>
            <th>Email</th>
        </tr>

        </thead>
        <tbody>

            <tr>

                <td>{{ user.firstname }}</td>


                <td>{{ user.lastname }}</td>


                <td>{{ user.birthday ? user.birthday|date('Y-m-d H:i:s') : '' }}</td>


                <td>{{ user.phoneNumber }}</td>


                <td>{{ user.licenceNumber }}</td>


                <td>{{ user.email }}</td>
            </tr>
        </tbody>
    </table>

    {% if user.rents %}
    <h2 style="color: black;"> Vos Location</h2>
    <div>
        {% for rent in user.rents %}
        <p>
            {{ rent.offer.vehicle.brand }}
            {{ rent.offer.vehicle.model }}
            {{ rent.statut }}

        </p>
        {% endfor %}
    </div>
    {% endif %}

    <a href="{{ path('user_index') }}">back to list</a>

    <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
