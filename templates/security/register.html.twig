{% extends 'base_index.html.twig' %}

{% block title %}Lib2Move - Registration{% endblock %}

{% block body %}

    <div class="container mt-5">
        <div class="p-0">
            <div class="row">
                <div class="col-md-12 text-dark">
                    <h3>Registration :</h3>
                </div>
            </div>
            {{ form_start(form) }}
            <div class="row">
                <div class="col-md-6">
                {{ form_row(form.firstname) }}
                </div>
                <div class="col-md-6">
                {{ form_row(form.lastname) }}
                </div>
                <div class="col-md-6">
                {{ form_row(form.email) }}
                </div>
                <div class="col-md-6">
                {{ form_row(form.birthday) }}
                </div>
                <div class="col-md-6">
                {{ form_row(form.password) }}
                </div>
                <div class="col-md-6">
                {{ form_row(form.phoneNumber) }}
                </div>
                <div class="col-md-6">
                </div> 

                <div class="col-md-12 d-flex justify-content-end mr-4">
                    <button class="btn btn-lg btn-secondary">{{ button_label|default('Register') }}</button>
                </div>

                </div>
            </div>
            {{ form_end(form) }}
    </div>

{% endblock %}
