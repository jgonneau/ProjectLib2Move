<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Lib2Move!{% endblock %}</title>
        <link rel="stylesheet" href="https://bootswatch.com/4/lux/bootstrap.css">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.7.0/animate.min.css">
        {% block stylesheets %}{% endblock %}
        <style>
            form {
                margin: 30px;
            }

            h3, h5 {
                margin-left: 20px;
            }

            footer {
                opacity: 0.9;
                z-index: 9999;
            }
        </style>
    </head>
    <body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-primary" style="padding: 8px 8px !important">
        <a class="navbar-brand" href="{{ path('home') }}">Lib2Move</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor01">

            {% if not is_granted('IS_AUTHENTICATED_ANONYMOUSLY') %}
                <ul class="navbar-nav mr-auto">
                    {% if app.user %}
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('user_show', {'id': app.user.id}) }}">Profil</a>
                    </li>
                    {% endif %}
                </ul>
                <ul class="navbar-nav navbar-right">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('login') }}"><i class="fas fa-user"></i>Account</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('logout') }}"><i class="fas fa-sign-in-alt"></i>Logout</a>
                    </li>
                </ul>
            {% else %}
                <ul class="navbar-nav ml-auto navbar-right">
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('home') }}"><- Back</a>
                    </li>
                </ul>
            {% endif %}
        </div>
    </nav>
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="flash-{{ label }} alert alert-dismissible alert-primary">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

        {% block body %}{% endblock %}
    {% block javascripts %}
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/wow/1.1.2/wow.min.js" integrity="sha256-z6FznuNG1jo9PP3/jBjL6P3tvLMtSwiVAowZPOgo56U=" crossorigin="anonymous"></script>
        <script>
            new WOW().init();
        </script>
    {% endblock %}

    <footer class="navbar fixed-bottom ms-auto bg-primary justify-content-center" style="padding: 5px 5px !important;">
         <p class="text-white">@Lib2Move</p> 
    </footer>
    </body>
</html>
